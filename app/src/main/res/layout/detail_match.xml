<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:cardBackgroundColor="@color/colorDarkBlue"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgDetailHome"
                android:layout_width="103dp"
                android:layout_height="107dp"
                android:layout_marginStart="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imgDetailAway"
                android:layout_width="103dp"
                android:layout_height="107dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvHomeGoalDetail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@android:color/white"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgDetailHome"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvPassDetail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="35sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tvScoreDetailAway"
                app:layout_constraintStart_toEndOf="@+id/tvHomeGoalDetail"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvScoreDetailAway"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:textColor="@android:color/white"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imgDetailAway"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvDetailEvent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Détails de l'event"
        android:textAlignment="center"
        android:textColor="#252525"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <TextView
        android:id="@+id/infosMatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:text="INFOS MATCH"
        android:textColor="@android:color/black"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/venueCardView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDetailEvent"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/infosMatchSeparation"
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#ADB4BF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infosMatch" />

    <androidx.cardview.widget.CardView
        android:id="@+id/venueCardView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/infosMatchSeparation"
        app:layout_constraintStart_toStartOf="parent"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/venueIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/stadium"
            android:layout_marginRight="5dp"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/venue_view_separation"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.cardview.widget.CardView>

    <!--    /Ligne de séparation qui va permettre de centrer à la verticale les deux TextView-->
    <View
        android:id="@+id/venue_view_separation"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/venueCardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/venueCardView" />


    <TextView
        android:id="@+id/venueLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Football stadium"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/venue_view_separation"
        app:layout_constraintStart_toEndOf="@+id/venueCardView" />

    <TextView
        android:id="@+id/tvDetailVenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom du stade"
        app:layout_constraintStart_toStartOf="@+id/venueLabel"
        app:layout_constraintTop_toBottomOf="@+id/venue_view_separation" />

    <androidx.cardview.widget.CardView
        android:id="@+id/dateCardView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="@+id/countryCardView"
        app:layout_constraintTop_toBottomOf="@+id/countryCardView">

        <ImageView
            android:id="@+id/dateIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:src="@drawable/calendar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/country_view_separation"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.cardview.widget.CardView>

    <!--    /Ligne de séparation qui va permettre de centrer à la verticale les deux TextView-->
    <View
        android:id="@+id/date_view_separation"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/dateCardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dateCardView" />


    <TextView
        android:id="@+id/dateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date of the game"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/date_view_separation"
        app:layout_constraintStart_toEndOf="@+id/dateCardView" />

    <TextView
        android:id="@+id/tvDetailDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        app:layout_constraintStart_toStartOf="@+id/dateLabel"
        app:layout_constraintTop_toBottomOf="@+id/date_view_separation" />


    <androidx.cardview.widget.CardView
        android:id="@+id/countryCardView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="@+id/venueCardView"
        app:layout_constraintTop_toBottomOf="@+id/venueCardView">

        <ImageView
            android:id="@+id/countryIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:src="@drawable/placeholder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/venue_view_separation"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.cardview.widget.CardView>

    <!--    /Ligne de séparation qui va permettre de centrer à la verticale les deux TextView-->
    <View
        android:id="@+id/country_view_separation"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/countryCardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/venueCardView" />


    <TextView
        android:id="@+id/countryLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Localisation"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/country_view_separation"
        app:layout_constraintStart_toEndOf="@+id/countryCardView" />

    <TextView
        android:id="@+id/tvDetailCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom du pays"
        app:layout_constraintStart_toStartOf="@+id/countryLabel"
        app:layout_constraintTop_toBottomOf="@+id/country_view_separation" />

    <ProgressBar
        android:id="@+id/progressBarMatchDetail"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDetailDate" />

</androidx.constraintlayout.widget.ConstraintLayout>